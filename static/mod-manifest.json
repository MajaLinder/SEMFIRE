{
    "apiVersion": "1.3",
    "version": "0.1.0",
    "name": "Pareto Chart",
    "id": "sfire-mods-pareto",
    "icon": "icon.svg",
    "properties": [

         {
            "name": "showCutOffLine",
            "type":"boolean",
            "defaultValue":false
        },
        {
            "name": "showCumulativeFrequencyLine",
            "type": "boolean",
            "defaultValue": false
        },
        {
            "name": "showLineMarkers",
            "type": "boolean",
            "defaultValue": false
        }
       
    ],
    "dataViewDefinition": {
        "colorAxis": {
            "mode": "dual",
            "preferredDualMode": "categorical",
            "dropTarget": {
                "icon": "Color",
                "description": "Color by {0}"
            },
            "automaticConfiguration": { "expressionHeuristics": "none" }
        },
        "axes": [
            {
                "name": "Category Axis",
                "mode": "categorical",
                "placement": "bottom",
                "dropTarget": {
                    "icon": "XAxis",
                    "description": "Use {0} on the category axis"
                },
                "legendItem": {
                    "title": "Category Axis",
                    "defaultVisibility": "visible"
                }
            },
            {
                "name": "Value Axis",
                "mode": "continuous",
                "placement": "left",
                "allowMultipleMeasures": true,
                "dropTarget": {
                    "icon": "YAxis",
                    "description": "Use {0} on the value axis"
                },
                "legendItem": {
                    "title": "Value Axis",
                    "defaultVisibility": "visible"
                }
            }
        ],
        "tooltip": {
            "enabled": true
        }
    },
    "files": ["index.html", "main.css", "bundle.js"]
}
