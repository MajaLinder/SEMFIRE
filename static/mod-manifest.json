{
    "apiVersion": "1.3",
    "version": "1.1",
    "name": "Pareto Chart",
    "id": "js-dev-paretochar",
    "icon": "icon.svg",
    "properties": [
        {
            "name": "value-axis-mode",
            "type": "string",
            "defaultValue": "numeric"
        },
        {
            "name": "category-axis-mode",
            "type": "string",
            "defaultValue": "numeric"
        },
        {
            "name": "stacked-bars",
            "type": "boolean",
            "defaultValue": false
        }
    ],
    "dataViewDefinition": {
        "tooltip": { "enabled": true },
        "colorAxis": {
            "mode": "dual",
            "dropTarget": {
                "icon": "Color",
                "description": "Color by {0}"
            },
            "automaticConfiguration": {
                "expressionHeuristics": "none"
            }
        },
        "axes": [
            {
                "name": "Category",
                "mode": "categorical",
                "placement": "bottom",
                "dropTarget": {
                    "icon": "XAxis",
                    "description": "Use {0} on the mod's X-axis"
                },
                "legendItem": {
                    "title": "Category-axis",
                    "defaultVisibility": "hidden"
                }
            },
            {
                "name": "Value",
                "mode": "continuous",
                "placement": "left",
                "allowMultipleMeasures": true,
                "dropTarget": {
                    "icon": "YAxis",
                    "description": "Use {0} on the mod's Y-axis"
                },
                "legendItem": {
                    "title": "Value-axis",
                    "defaultVisibility": "hidden"
                }
            }
        ]
    },
    "files": [
        "index.html",
        "main.css",
        "bundle.js"
    ]
}